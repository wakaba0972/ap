<Window x:Class="HW01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HW01"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" KeyDown="Button_Key_Down">
    <Grid>
        <Label Name ="label0" HorizontalAlignment="Left" Content="A" FontSize="30"></Label>
        <Label Name ="label1" HorizontalAlignment="Center" Content="B" FontSize="30"></Label>
        <Label Name ="label2" HorizontalAlignment="Right" Content="C" FontSize="30"></Label>

        <Button Margin="-120,0,0,0" VerticalAlignment="Center" Width="100" Height="70" Content="←" FontSize="30" Click="Button_Left_Click"></Button>
        <Button Margin="120,0,0,0" VerticalAlignment="Center" Width="100" Height="70" Content="→" FontSize="30" Click="Button_Right_Click"></Button>
    </Grid>
</Window>
